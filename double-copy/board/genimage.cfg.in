image boot.vfat {
	vfat {
		files = {
#BOOT_FILES#
		}
	}

	size = 32M
}

image user.ext4 {
	ext4 {}
	size = 1M
}

image sdcard.img {
	hdimage {
	}

	partition boot {
		partition-type = 0xC
		bootable = "true"
		image = "boot.vfat"
	}

	partition rootfs {
		partition-type = 0x83
		image = "rootfs.ext2"
		size = 256M
	}

	partition rootfs2 {
		partition-type = 0x83
		image = "rootfs.ext2"
		size = 256M
	}

	partition user {
		partition-type = 0x83
		image = "user.ext4"
	}
}
